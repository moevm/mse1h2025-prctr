{
  "manifest_version": 3,
  "name": "Screen Recorder Extension",
  "version": "1.0",
  "description": "Расширение для записи экрана",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
