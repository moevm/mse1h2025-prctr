{
	"name": "Local proctoring",
	"description": "Local screencast",
	"version": "1.0.1",
	"manifest_version": 3,
	"permissions": [
		"storage",
		"alarms",
		"tabs",
		"desktopCapture",
		"downloads"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"css": ["media.css"]
		}
	],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"web_accessible_resources": [
		{
			"resources": ["media.html", "media.js", "logger.js"],
			"matches": ["<all_urls>"]
		}
	],
	"icons": {
		"16": "assets/icon.png",
		"48": "assets/icon.png",
		"128": "assets/icon.png"
	}
}